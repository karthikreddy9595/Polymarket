# Polymarket Trading Bot Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Polymarket Credentials
# ===========================================
# Your wallet private key (without 0x prefix)
PRIVATE_KEY=your_wallet_private_key_here

# Polymarket API credentials (get from https://polymarket.com)
POLYMARKET_API_KEY=your_api_key
POLYMARKET_API_SECRET=your_api_secret
POLYMARKET_API_PASSPHRASE=your_passphrase

# ===========================================
# Environment Settings
# ===========================================
# Set to true for testnet, false for mainnet
USE_TESTNET=true

# Chain ID: 80002 for Polygon Amoy testnet, 137 for Polygon mainnet
CHAIN_ID=80002

# ===========================================
# Trading Parameters
# ===========================================
# Number of shares per trade
ORDER_SIZE=100

# Limit buy price (0.0 to 1.0)
BUY_PRICE=0.8

# Sell price after buy fills (0.0 to 1.0)
SELL_PRICE=0.5

# Maximum loss threshold - square off all positions if loss reaches this
MAX_LOSS=0.3

# Price target - sell when price hits this level
PRICE_TARGET=0.98

# Minutes before market close to start trading
TIME_THRESHOLD=3

# Paper Trading (set to true to simulate trades without real money)
PAPER_TRADING=true
PAPER_BALANCE=1000.0

# ===========================================
# Database
# ===========================================
# SQLite database URL (relative to app directory)
DATABASE_URL=sqlite+aiosqlite:///./data/trades.db

# ===========================================
# API Server
# ===========================================
API_HOST=0.0.0.0
API_PORT=5000

# ===========================================
# Docker Deployment
# ===========================================
# Port mappings for Docker (host ports)
FRONTEND_PORT=9000

# ===========================================
# Logging
# ===========================================
# Set to DEBUG for detailed logs (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
